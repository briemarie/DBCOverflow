<h1>DBCOverflow Question and Answers</h1>

<div>
    <h3><%= @question.title %></h3>
    <p><%= @question.content %></p>
</div>

<div>
    <% @answers.each do |a| %>
        <h4><%= a.title %></h4>
        <p><%= a.content %></p>
    <% end %>
</div>

<h2>Add and answer:</h2>
<%= form_for @new_answer do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :content %>:
  <%= f.text_field :content %><br />

  <%= f.submit "Submit Answer" %>
<% end %>
